{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --fix --ext .ts,.tsx",
    "test:unit:frontend": "echo 'TODO: Install vitest and configure' && exit 0",
    "test:unit:rust": "cd src-tauri && cargo test --lib",
    "test:integration": "cd src-tauri && cargo test --test '*' 2>/dev/null || echo 'No integration tests'",
    "test:e2e": "npm run e2e:run:mac",
    "test:ai-live": "echo 'AI Live tests via MCP HTTP Bridge' && curl -s http://127.0.0.1:3001/health || echo 'Bridge not running'",
    "test:all": "npm run test:unit:rust && npm run test:integration && npm run type-check && npm run lint",
    "test:full": "./scripts/test-full-suite.sh",
    "test:full:skip-e2e": "./scripts/test-full-suite.sh --skip-e2e",
    "test:quick": "npm run type-check && npm run lint",
    "fix:imports": "find src -type f \\( -name '*.ts' -o -name '*.tsx' \\) -exec sed -i.bak 's/import type {\\([^}]*Schema[^}]*\\)}/import {\\1}/g' {} \\; && find src -name '*.bak' -delete",
    "fix:rust": "cd src-tauri && cargo fmt && cd ..",
    "pre-commit": "cd src-tauri && cargo fmt && cd .. && npm run type-check",
    "ci:local": "npm run type-check && npm run lint && npm run fix:rust",
    "e2e:build:mac": "npm run tauri build -- -b none --features e2e",
    "e2e:run:mac": "wdio run wdio.conf.ts",
    "e2e:headed:mac": "HEADLESS=false wdio run wdio.conf.ts",
    "e2e:debug:mac": "HEADLESS=false wdio run wdio.conf.ts --spec e2e/tests/01-smoke.spec.ts",
    "e2e:smoke": "wdio run wdio.conf.ts --spec e2e/tests/01-smoke.spec.ts",
    "e2e:all": "npm run e2e:build:mac && npm run e2e:run:mac",
    "e2e:playwright": "cd e2e-tests && npm test",
    "e2e:playwright:smoke": "cd e2e-tests && npm run test:smoke",
    "e2e:playwright:ci": "cd e2e-tests && npm run test:ci",
    "e2e:playwright:ui": "cd e2e-tests && npm run test:ui",
    "e2e:playwright:report": "cd e2e-tests && npm run test:report",
    "dev:mcp": "tauri dev --features mcp",
    "mcp:info": "echo 'MCP Socket: /tmp/fluxion-mcp.sock' && echo 'Config: .claude/mcp_config.json'",
    "prepare": "husky",
    "setup:piper": "node scripts/setup-piper.js",
    "whatsapp:start": "node scripts/whatsapp-service.cjs start",
    "whatsapp:status": "node scripts/whatsapp-service.cjs status",
    "version:bump": "node scripts/bump-version.cjs",
    "version:show": "node scripts/bump-version.cjs",
    "tauri-build-force": "tauri build --ci"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.15",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "puppeteer": "^21.5.0",
    "qrcode-terminal": "^0.12.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.69.0",
    "react-router-dom": "^7.11.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "whatsapp-web.js": "^1.34.4",
    "xlsx": "^0.18.5",
    "zod": "^4.2.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@wdio/cli": "^8.27.0",
    "@wdio/globals": "^8.27.0",
    "@wdio/json-reporter": "^8.27.0",
    "@wdio/local-runner": "^8.27.0",
    "@wdio/mocha-framework": "^8.27.0",
    "@wdio/spec-reporter": "^8.27.0",
    "autoprefixer": "^10.4.23",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.3",
    "vite": "^5.4.11"
  }
}
