{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fluxion",
  "version": "0.1.0",
  "identifier": "com.fluxion.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Fluxion",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../data/*",
      "../scripts/whatsapp-service.cjs"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "FLUXION Voice Agent richiede accesso al microfono per la registrazione vocale"
      }
    }
  }
}
