{
  "name": "fluxion-e2e",
  "version": "1.0.0",
  "description": "E2E tests for FLUXION desktop app (WebDriverIO + tauri-driver)",
  "type": "module",
  "scripts": {
    "test": "wdio run ../wdio.conf.ts",
    "test:single": "wdio run ../wdio.conf.ts --spec",
    "test:debug": "wdio run ../wdio.conf.ts --logLevel debug",
    "test:booking": "wdio run ../wdio.conf.ts --spec tests/booking.spec.ts",
    "test:crm": "wdio run ../wdio.conf.ts --spec tests/crm.spec.ts",
    "test:invoice": "wdio run ../wdio.conf.ts --spec tests/invoice.spec.ts",
    "test:cashier": "wdio run ../wdio.conf.ts --spec tests/cashier.spec.ts",
    "test:voice": "wdio run ../wdio.conf.ts --spec tests/voice.spec.ts"
  },
  "devDependencies": {
    "@wdio/cli": "^8.40.0",
    "@wdio/local-runner": "^8.40.0",
    "@wdio/mocha-framework": "^8.40.0",
    "@wdio/spec-reporter": "^8.40.0",
    "@wdio/json-reporter": "^8.40.0",
    "typescript": "^5.4.0",
    "ts-node": "^10.9.2"
  }
}
